<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.boomslang.geb.generator</groupId>
		<artifactId>org.boomslang.geb.generator</artifactId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>org.boomslang.generator.geb.feature</artifactId>
	<packaging>eclipse-feature</packaging>
	<name>Boomslang Geb Generator Feature</name>
	<description>
		Delivers the STMPBot generator.
	</description>

	<dependencies>
		<!-- These dependencies are not required to build the feature. However, they are used by the xtext-maven-plugin dependency config section to load all dependencies. -->
		<dependency>
			<groupId>org.boomslang</groupId>
			<artifactId>org.boomslang.feature</artifactId>
			<version>${project.version}</version><!-- versions may differ -->
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>org.boomslang.generator.feature.geb</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>org.boomslang.generator.feature.geb.ui</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>org.boomslang.generator.mapping.geb</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>org.boomslang.generator.mapping.geb.ui</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-maven-plugin</artifactId>
                <extensions>true</extensions>
            </plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
